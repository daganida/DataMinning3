<Window x:Class="ID3Classifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Grid x:Name="myGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="20" Margin="97,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="262" TextChanged="TextBox_TextChanged"/>
        <Button  Grid.Row="0" Content="Browse" Click="Browse_Click" HorizontalAlignment="Left" Margin="364,53,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Build_Click" Grid.Row="0" Content="Build" HorizontalAlignment="Left" Margin="97,96,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Classify_Click" Grid.Row="0" Content="Classify" HorizontalAlignment="Left" Margin="284,96,0,0" VerticalAlignment="Top" Width="75"/>
        <Image x:Name="image1"  Grid.Row="1" Width="515"  />

    </Grid>
</Window>
